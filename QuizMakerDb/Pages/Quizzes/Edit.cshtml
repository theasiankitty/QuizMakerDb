@page
@model QuizMakerDb.Pages.Quizzes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Quiz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Quiz.Id" />
            <div class="form-group">
                <label asp-for="Quiz.Title" class="control-label"></label>
                <input asp-for="Quiz.Title" class="form-control" />
                <span asp-validation-for="Quiz.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.Introduction" class="control-label"></label>
                <input asp-for="Quiz.Introduction" class="form-control" />
                <span asp-validation-for="Quiz.Introduction" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Quiz.isQuestionRandomized" /> @Html.DisplayNameFor(model => model.Quiz.isQuestionRandomized)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.ConclusionDescription" class="control-label"></label>
                <input asp-for="Quiz.ConclusionDescription" class="form-control" />
                <span asp-validation-for="Quiz.ConclusionDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.Minutes" class="control-label"></label>
                <input asp-for="Quiz.Minutes" class="form-control" />
                <span asp-validation-for="Quiz.Minutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.Takes" class="control-label"></label>
                <input asp-for="Quiz.Takes" class="form-control" />
                <span asp-validation-for="Quiz.Takes" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Quiz.ShowResults" /> @Html.DisplayNameFor(model => model.Quiz.ShowResults)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.TeacherId" class="control-label"></label>
                <select asp-for="Quiz.TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                <span asp-validation-for="Quiz.TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Quiz.Active" /> @Html.DisplayNameFor(model => model.Quiz.Active)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.CreatedBy" class="control-label"></label>
                <input asp-for="Quiz.CreatedBy" class="form-control" />
                <span asp-validation-for="Quiz.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.CreatedDate" class="control-label"></label>
                <input asp-for="Quiz.CreatedDate" class="form-control" />
                <span asp-validation-for="Quiz.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.UpdatedBy" class="control-label"></label>
                <input asp-for="Quiz.UpdatedBy" class="form-control" />
                <span asp-validation-for="Quiz.UpdatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.UpdatedDate" class="control-label"></label>
                <input asp-for="Quiz.UpdatedDate" class="form-control" />
                <span asp-validation-for="Quiz.UpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
