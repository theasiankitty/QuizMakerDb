@using QuizMakerDb.Data.Identity
@model QuizMakerDb.Pages.QuizSections.IndexModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@inject UserManager<AppUser> userManager
@{
	ViewData["Title"] = "Index";

	var requestToken = Antiforgery.GetAndStoreTokens(HttpContext).RequestToken;

	var user = await userManager.GetUserAsync(User);

	bool isAdmin = await userManager.IsInRoleAsync(user, Constants.ROLE_ADMIN);

	var hasQuizSections = Model.QuizSections.Count > 0;

	var firstDisabled = Model.QuizSections.PageIndex == 1 ? "disabled" : "";
	var lastDisabled = Model.QuizSections.PageIndex == Model.QuizSections.TotalPages ? "disabled" : "";
	var prevDisabled = !Model.QuizSections.HasPreviousPage ? "disabled" : "";
	var nextDisabled = !Model.QuizSections.HasNextPage ? "disabled" : "";

	int length = 3;
	int start = 1;
	int center = Math.Abs(length / 2) + 1;

	if (Model.QuizSections.PageIndex < center)
	{
		start = 1;
	}
	else
	{
		start = (Model.QuizSections.PageIndex - center) + 1;
	}

	int end = start + length;

	if (Model.QuizSections.TotalPages == 1)
		end = 1;
	if (end > Model.QuizSections.TotalPages)
	{
		end = Model.QuizSections.TotalPages + 1;
		start = end - length;
		if (start < 1)
		{
			start = 1;
			end = length;
		}
	}
}

